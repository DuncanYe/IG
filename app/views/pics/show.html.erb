<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <div class="panel panel-default">
        <div class="panel-heading">
          <%= @pic.image.url %>
        </div>
        <div class="panel-body">
          <h1><%= @pic.title %></h1>
          <p><%= @pic.description %></p>
        </div>

        <div class="panel-footer">
          <div class="row">
            <div class="col-md-6">
              Gram by <%= @pic.user.email %>
            </div>
            <div class="col-md-6">
              <%= link_to 'Fix it', edit_pic_path(@pic), class: 'btn btn-default pull-right' %>
              <%= link_to 'Delete', pic_path(@pic), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger pull-right' %>
            </div>
          </div>
        </div>
      
      </div>
    </div>
  </div>
</div>
